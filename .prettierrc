{
    "$schema": "http://json.schemastore.org/prettierrc",
    "semi": true,
    "trailingComma": "es5",
    "singleQuote": true,
    "quoteProps": "as-needed",
    "printWidth": 80,
    "tabWidth": 2,
    "useTabs": false,
    "bracketSpacing": true,
    "bracketSameLine": false,
    "arrowParens": "always",
    "proseWrap": "preserve",
    "endOfLine": "lf",
    "singleAttributePerLine": true,
    "plugins": [
        "prettier-plugin-svelte"
    ],
    "overrides": [
        {
            "files": "*.json",
            "options": {
                "printWidth": 200
            }
        },
        {
            "files": "*.svelte",
            "options": {
                "parser": "svelte"
            }
        }
    ]
}