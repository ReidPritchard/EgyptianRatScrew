{
  "name": "oers",
  "description": "Online Egyptian Rat Screw Game (multiplayer, web-sockets)",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "scripts": {
    "start:server": "tsx server/index.ts",
    "start:client": "webpack --config webpack.config.cjs",
    "start": "npm run start:server & npm run start:client",
    "dev:server": "tsx watch server/index.ts",
    "dev:client": "webpack --config webpack.config.cjs --watch",
    "dev": "npm run dev:server & npm run dev:client",
    "build:server": "tsc --project tsconfig.server.json",
    "build:client": "webpack --config webpack.config.cjs",
    "build": "npm run build:server & npm run build:client",
    "lint": "eslint --ext .ts,.tsx .",
    "format": "prettier --write \"**/*.{ts,tsx,json,md}\""
  },
  "dependencies": {
    "@mantine/core": "^7.12.2",
    "@mantine/notifications": "^7.12.2",
    "@tabler/icons-react": "^3.17.0",
    "express": "^4.17.1",
    "framer-motion": "^11.5.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "socket.io": "^4.4.1",
    "socket.io-client": "^4.4.1",
    "tabler-icons-react": "^1.56.0",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@babel/core": "^7.25.2",
    "@babel/plugin-syntax-jsx": "^7.24.7",
    "@babel/preset-env": "^7.25.4",
    "@babel/preset-typescript": "^7.24.7",
    "@types/express": "^4.17.13",
    "@types/node": "^16.11.12",
    "@types/react": "^18.0.28",
    "@types/react-dom": "^18.0.11",
    "@types/uuid": "^8.3.3",
    "@typescript-eslint/eslint-plugin": "^8.5.0",
    "@typescript-eslint/parser": "^8.5.0",
    "babel-loader": "^9.1.3",
    "eslint": "^9.10.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "prettier": "^3.3.3",
    "ts-loader": "^9.5.1",
    "tsx": "^4.11.0",
    "typescript": "^4.9.5",
    "webpack": "^5.94.0",
    "webpack-cli": "^5.1.4"
  }
}
